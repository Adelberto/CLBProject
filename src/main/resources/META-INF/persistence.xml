<?xml version="1.0" encoding="UTF-8"?>
<persistence version="2.0"
	xmlns="http://java.sun.com/xml/ns/persistence" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://java.sun.com/xml/ns/persistence http://java.sun.com/xml/ns/persistence/persistence_2_0.xsd">

	<persistence-unit name="clbDatabase" transaction-type="RESOURCE_LOCAL">
		<provider>org.hibernate.jpa.HibernatePersistenceProvider</provider>
		<class>clb.database.entities.Analyzer</class>
		<class>clb.database.entities.AnalyzerRegistry</class>
		<class>clb.database.entities.AnalyzerRegistryExtraInfo</class>
		<class>clb.database.entities.Building</class>
		<class>clb.database.entities.DataLogger</class>
		<class>clb.database.entities.Usersystem</class>
		<properties>
			<property name="hibernate.dialect" value="org.hibernate.dialect.DerbyDialect" />
			<property name="hibernate.show_sql" value="true" />
			<property name="hibernate.default_schema" value="clb"/>
 		</properties> 
	</persistence-unit>
</persistence>